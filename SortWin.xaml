<Window x:Class="products.SortWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:products"
        mc:Ignorable="d"
        Title="" Height="173.5" Width="194.5" Closed="Window_Closed">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="44" Margin="5,10,0,0" TextWrapping="Wrap" Text="Выберете режим сортировки" VerticalAlignment="Top" Width="175" SelectionOpacity="0" BorderBrush="{x:Null}" FontSize="16"/>
        <RadioButton x:Name="upRadioButton" Content="По возрастанию" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="165" FontSize="14"/>
        <RadioButton  x:Name="downRadioButton" Content="По убыванию" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="109" FontSize="14"/>
        <Button Content="Ок" HorizontalAlignment="Left" Margin="0,108,0,0" VerticalAlignment="Top" Width="185" Click="Button_Click"/>
    </Grid>
</Window>
